{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <h1>Liste des Produits</h1>

    <a href="{{ path('produit_ajouter') }}">➕ Ajouter un produit</a>

    <table border="1" cellpadding="8" cellspacing="0" style="margin-top:20px;">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>

        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>
                    <a href="{{ path('produit_modifier', {id: produit.id}) }}">✏ Modifier</a>

                    {{ include('Produit/_delete_form.html.twig', { produit: produit }) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun produit trouvé.</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
