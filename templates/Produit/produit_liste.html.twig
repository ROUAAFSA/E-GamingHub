<h1>Liste des Produits</h1>

<table border="1" cellpadding="8" cellspacing="0" style="margin-top:20px; border-collapse: collapse;">
    <thead>
    <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Prix</th>
        <th>Quantité</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    {% for produit in produits %}
        <tr>
            <td>{{ produit.id }}</td>
            <td>{{ produit.nom }}</td>
            <td>{{ produit.prix }}</td>
            <td>{{ produit.quantite }}</td>

            <td>
                <a href="{{ path('produit_modifier', { id: produit.id }) }}">Modifier</a> |
                <a href="{{ path('produit_supprimer', { id: produit.id }) }}"
                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                    Supprimer
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
