{% extends 'base.html.twig' %}

{% block title %}Boutique - E-SPORTIFY{% endblock %}

{% block stylesheets %}
    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Poppins Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Dashboard CSS -->
    <link rel="stylesheet" href="{{ asset('dashboard/style.css') }}">
{% endblock %}

{% block body %}
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <img src="{{ asset('navbar/img/E-SPORTIFY.png') }}" alt="E-SPORTIFY">
        </a>

        <ul class="side-menu top">
            <li>
                <a href="{{ path('app_dashboard_admin') }}">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li class="active">
                <a href="{{ path('app_admin_boutique') }}">
                    <i class='bx bxs-shopping-bag-alt'></i>
                    <span class="text">Boutique</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bxs-doughnut-chart'></i>
                    <span class="text">Analytics</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bxs-message-dots'></i>
                    <span class="text">Messages</span>
                </a>
            </li>
        </ul>

        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_logout') }}" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>

    <!-- CONTENT -->
    <section id="content">
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Boutique</h1>
                    <ul class="breadcrumb">
                        <li><a href="{{ path('app_dashboard_admin') }}">Dashboard</a></li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li><a class="active" href="#">Boutique</a></li>
                    </ul>
                </div>
            </div>

            <!-- Tabs Navigation -->
            <div class="boutique-tabs">
                <a href="{{ path('app_admin_boutique', {'section': 'dashboard'}) }}" class="tab-link {% if section == 'dashboard' %}active{% endif %}">
                    <i class='bx bxs-dashboard'></i>
                    <span>Dashboard</span>
                </a>
                <a href="{{ path('app_admin_boutique', {'section': 'produits'}) }}" class="tab-link {% if section == 'produits' %}active{% endif %}">
                    <i class='bx bxs-package'></i>
                    <span>Produits</span>
                </a>
                <a href="{{ path('app_admin_boutique', {'section': 'commandes'}) }}" class="tab-link {% if section == 'commandes' %}active{% endif %}">
                    <i class='bx bxs-cart'></i>
                    <span>Commandes</span>
                </a>
                <a href="{{ path('app_admin_boutique', {'section': 'promotions'}) }}" class="tab-link {% if section == 'promotions' %}active{% endif %}">
                    <i class='bx bxs-offer'></i>
                    <span>Promotions</span>
                </a>
            </div>

            <!-- Content Sections -->
            {% if section == 'dashboard' %}
                <!-- Dashboard Stats -->
                <ul class="box-info">
                    <li>
                        <i class='bx bxs-package'></i>
                        <span class="text">
                            <h3>{{ stats.totalProduits|default(0) }}</h3>
                            <p>Total Produits</p>
                        </span>
                    </li>
                    <li>
                        <i class='bx bxs-cart'></i>
                        <span class="text">
                            <h3>{{ stats.totalCommandes|default(0) }}</h3>
                            <p>Total Commandes</p>
                        </span>
                    </li>
                    <li>
                        <i class='bx bx-money'></i>
                        <span class="text">
                            <h3>{{ stats.totalVentes|number_format(2, '.', ' ') }}</h3>
                            <p>Recette Totale (TND)</p>
                        </span>
                    </li>
                </ul>

                <!-- Charts -->
                <div class="charts-grid">
                    <div class="chart-card">
                        <div class="chart-header">
                            <h3><i class='bx bxs-bar-chart-alt-2'></i> Commandes par statut</h3>
                        </div>
                        <div class="chart-body">
                            <canvas id="commandesChart"></canvas>
                        </div>
                    </div>

                    <div class="chart-card">
                        <div class="chart-header">
                            <h3><i class='bx bxs-pie-chart-alt-2'></i> Méthodes de paiement</h3>
                        </div>
                        <div class="chart-body">
                            <canvas id="paiementPieChart"></canvas>
                        </div>
                    </div>
                </div>

            {% elseif section == 'produits' %}
                <div class="table-data">
                    <div class="order">
                        <div class="head">
                            <h3>Gestion des Produits</h3>
                            <a href="{{ path('admin_produit_ajouter') }}" class="btn-add">
                                <i class='bx bx-plus'></i> Ajouter un produit
                            </a>
                        </div>

                        <table>
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Stock</th>
                                <th>Catégorie</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for produit in produits %}
                                <tr>
                                    <td>{{ produit.id }}</td>
                                    <td>{{ produit.nom }}</td>
                                    <td>{{ produit.prix }} €</td>
                                    <td>
                                        <span class="stock-badge {% if produit.stock < 10 %}low-stock{% endif %}">
                                            {{ produit.stock }}
                                        </span>
                                    </td>
                                    <td>{{ produit.categorie ? produit.categorie.nom : '-' }}</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="{{ path('admin_produit_modifier', {'id': produit.id}) }}" class="btn-action edit">
                                                <i class='bx bx-edit'></i>
                                            </a>
                                            <form action="{{ path('admin_produit_supprimer', {'id': produit.id}) }}" method="post" class="inline-form" onsubmit="return confirm('Voulez-vous vraiment supprimer ce produit ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('supprimer_produit_' ~ produit.id) }}">
                                                <button type="submit" class="btn-action delete">
                                                    <i class='bx bx-trash'></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="empty-state">Aucun produit trouvé.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            {% elseif section == 'commandes' %}
                <div class="table-data">
                    <div class="order">
                        <div class="head">
                            <h3>Gestion des Commandes</h3>
                            <button id="validerTousBtn" class="btn-validate" disabled>
                                <i class='bx bx-check'></i> Valider les changements
                            </button>
                        </div>

                        <table>
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Client</th>
                                <th>Date</th>
                                <th>Montant</th>
                                <th>Paiement</th>
                                <th>État</th>
                            </tr>
                            </thead>
                            <tbody id="commandesTableBody">
                            {% for commande in commandes %}
                                <tr>
                                    <td>{{ commande.id }}</td>
                                    <td>{{ commande.utilisateur.nom }} {{ commande.utilisateur.prenom }}</td>
                                    <td>{{ commande.date ? commande.date|date('d/m/Y H:i') : '-' }}</td>
                                    <td>{{ commande.montant|number_format(2, '.', ' ') }} TND</td>
                                    <td>
                                        <span class="payment-badge {{ commande.statut == 'Payée en ligne' ? 'stripe' : 'cash' }}">
                                            {{ commande.statut == 'Payée en ligne' ? 'Stripe' : 'Cash' }}
                                        </span>
                                    </td>
                                    <td>
                                        <select class="status-select etat-select" data-id="{{ commande.id }}" data-token="{{ csrf_token('update_commande_status_' ~ commande.id) }}">
                                            <option value="En attente" {% if commande.statut == 'En attente' %}selected{% endif %}>En attente</option>
                                            <option value="Validée" {% if commande.statut == 'Validée' %}selected{% endif %}>Validée</option>
                                            <option value="Expédiée" {% if commande.statut == 'Expédiée' %}selected{% endif %}>Expédiée</option>
                                            <option value="Annulée" {% if commande.statut == 'Annulée' %}selected{% endif %}>Annulée</option>
                                        </select>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            {% elseif section == 'promotions' %}
                <div class="promotions-grid">
                    <!-- Codes Promo Card -->
                    <div class="promo-card">
                        <div class="promo-header">
                            <h3><i class='bx bxs-discount'></i> Codes Promo</h3>
                            <a href="{{ path('admin_code_promo_new') }}" class="btn-add-small">
                                <i class='bx bx-plus'></i> Nouveau code
                            </a>
                        </div>
                        <div class="promo-body">
                            <table class="promo-table">
                                <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Réduction</th>
                                    <th>État</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for code in codes_promo %}
                                    <tr>
                                        <td><strong>{{ code.code }}</strong></td>
                                        <td>
                                            {% if code.montantFixe %}
                                                {{ code.montantFixe|number_format(2, ',', ' ') }} TND
                                            {% elseif code.pourcentage %}
                                                {{ code.pourcentage }}%
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge-status {{ code.actif ? 'active' : 'inactive' }}">
                                                {{ code.actif ? 'Actif' : 'Inactif' }}
                                            </span>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_code_promo_edit', {'id': code.id}) }}" class="btn-action edit">
                                                <i class='bx bx-edit'></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="empty-state">Aucun code promo</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Promotions Produits Card -->
                    <div class="promo-card">
                        <div class="promo-header">
                            <h3><i class='bx bxs-offer'></i> Promotions sur Produits</h3>
                            <button type="button" class="btn-add-small" data-modal="newPromoModal">
                                <i class='bx bx-plus'></i> Nouvelle promotion
                            </button>
                        </div>
                        <div class="promo-body">
                            <table class="promo-table">
                                <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Réduction</th>
                                    <th>Période</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for promo in promotions_produits %}
                                    <tr>
                                        <td>{{ promo.produit.nom }}</td>
                                        <td><span class="discount-badge">{{ promo.pourcentage }}%</span></td>
                                        <td class="date-range">
                                            {{ promo.dateDebut|date('d/m/Y') }} - {{ promo.dateFin|date('d/m/Y') }}
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <button type="button" class="btn-action edit" data-modal="editPromoModal{{ promo.id }}">
                                                    <i class='bx bx-edit'></i>
                                                </button>
                                                <form method="post" action="{{ path('admin_promotion_delete', {'id': promo.id}) }}" class="inline-form">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promo.id) }}">
                                                    <button type="submit" class="btn-action delete" onclick="return confirm('Êtes-vous sûr ?')">
                                                        <i class='bx bx-trash'></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4" class="empty-state">Aucune promotion active</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Modal Nouvelle Promotion -->
                <div class="modal" id="newPromoModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3>Nouvelle Promotion</h3>
                                <span class="close-modal">&times;</span>
                            </div>
                            <form method="post" action="{{ path('admin_promotion_new') }}">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label>Produit</label>
                                        <select name="produit" required class="form-control">
                                            <option value="">Sélectionner un produit</option>
                                            {% for produit in produits %}
                                                <option value="{{ produit.id }}">{{ produit.nom }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Pourcentage de réduction</label>
                                        <input type="number" name="pourcentage" required min="1" max="99" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Date de début</label>
                                        <input type="date" name="dateDebut" required class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>Date de fin</label>
                                        <input type="date" name="dateFin" required class="form-control">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn-secondary close-modal-btn">Annuler</button>
                                    <button type="submit" class="btn-primary">Créer</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            {% endif %}
        </main>
    </section>
{% endblock %}

{% block javascripts %}
    {% if section == 'dashboard' %}
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            // Bar chart
            new Chart(document.getElementById('commandesChart'), {
                type: 'bar',
                data: {
                    labels: {{ chartData.labels|json_encode|raw }},
                    datasets: [{
                        label: 'Commandes',
                        data: {{ chartData.data|json_encode|raw }},
                        backgroundColor: 'rgba(102, 126, 234, 0.8)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { y: { beginAtZero: true } }
                }
            });

            // Pie chart
            new Chart(document.getElementById('paiementPieChart'), {
                type: 'pie',
                data: {
                    labels: ['Cash', 'Stripe'],
                    datasets: [{
                        data: [{{ stats.nbPaiementCash|default(0) }}, {{ stats.nbPaiementStripe|default(0) }}],
                        backgroundColor: ['#764ba2', '#667eea']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        </script>
    {% elseif section == 'commandes' %}
        <script>
            const selects = document.querySelectorAll('.etat-select');
            const validerBtn = document.getElementById('validerTousBtn');
            const originalValues = Array.from(selects).map(s => s.value);

            function updateButton() {
                const hasChanges = Array.from(selects).some((s, i) => s.value !== originalValues[i]);
                validerBtn.disabled = !hasChanges;
            }

            selects.forEach(s => s.addEventListener('change', updateButton));

            validerBtn.addEventListener('click', function() {
                const changes = [];
                selects.forEach((select, i) => {
                    if (select.value !== originalValues[i]) {
                        changes.push({ select, i, id: select.dataset.id, statut: select.value, token: select.dataset.token });
                    }
                });

                changes.forEach(({select, i, id, statut, token}) => {
                    fetch("{{ path('admin_commandes_update_status') }}", {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: `id=${id}&statut=${encodeURIComponent(statut)}&_token=${token}`
                    })
                        .then(r => r.json())
                        .then(data => {
                            if (data.success) {
                                originalValues[i] = statut;
                                alert('État mis à jour !');
                            }
                        })
                        .finally(() => updateButton());
                });
            });
        </script>
    {% elseif section == 'promotions' %}
        <script>
            // Modal handlers
            document.querySelectorAll('[data-modal]').forEach(btn => {
                btn.addEventListener('click', () => {
                    document.getElementById(btn.dataset.modal).style.display = 'block';
                });
            });

            document.querySelectorAll('.close-modal, .close-modal-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    this.closest('.modal').style.display = 'none';
                });
            });

            window.addEventListener('click', (e) => {
                if (e.target.classList.contains('modal')) {
                    e.target.style.display = 'none';
                }
            });
        </script>
    {% endif %}
{% endblock %}
