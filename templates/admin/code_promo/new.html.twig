{% extends 'base.html.twig' %}

{% block title %}Nouveau Code Promo{% endblock %}

{% block body %}
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <img src="{{ asset('navbar/img/E-SPORTIFY.png') }}" alt="E-SPORTIFY" style="width: 180px; height: auto; margin-left: 10px;">
        </a>
        <ul class="side-menu top">
            <li>
                <a href="{{ path('app_dashboard_admin') }}">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li class="active">
                <a href="{{ path('admin_boutique') }}">
                    <i class='bx bxs-shopping-bag-alt'></i>
                    <span class="text">Mon Boutique</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bxs-doughnut-chart'></i>
                    <span class="text">Analytics</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_admin_dashboard') }}">
                    <i class='bx bxs-message-dots'></i>
                    <span class="text">Message</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bxs-group'></i>
                    <span class="text">Team</span>
                </a>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="#">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_logout') }}" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Créer un nouveau code promo</h1>
                
                <div class="card mb-4">
                    <div class="card-body">
                        {{ include('admin/code_promo/_form.html.twig') }}
                    </div>
                </div>

                <a href="{{ path('admin_boutique', {'section': 'promotions'}) }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </main>
    </section>
    <!-- CONTENT -->
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="{{ asset('dashboard/style.css') }}">
{% endblock %} 