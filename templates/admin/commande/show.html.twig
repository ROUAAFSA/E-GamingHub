{% extends 'base.html.twig' %}

{% block title %}Détails de la commande #{{ commande.id }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Commande #{{ commande.id }}</h1>
            <div>
                <a href="{{ path('admin_commande_facture', {'id': commande.id}) }}" class="btn btn-secondary">
                    <i class="fas fa-file-pdf"></i> Télécharger la facture
                </a>
                <a href="{{ path('admin_commande_index') }}" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Informations client</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Client :</strong> {{ commande.utilisateur.nom }}</p>
                        <p><strong>Email :</strong> {{ commande.utilisateur.email }}</p>
                        <p><strong>Adresse de livraison :</strong><br>{{ commande.adresseLivraison }}</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Informations commande</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Date :</strong> {{ commande.date|date('d/m/Y H:i') }}</p>
                        <p><strong>Méthode de livraison :</strong> {{ commande.methodeLivraison }}</p>
                        <p><strong>Méthode de paiement :</strong> {{ commande.methodePaiement }}</p>
                        <p>
                            <strong>Statut :</strong>
                            <form method="post" action="{{ path('admin_commande_edit', {'id': commande.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ commande.id) }}">
                                <select name="statut" class="form-select form-select-sm d-inline-block w-auto" onchange="this.form.submit()">
                                    <option value="en_attente" {% if commande.statut == 'en_attente' %}selected{% endif %}>En attente</option>
                                    <option value="validee" {% if commande.statut == 'validee' %}selected{% endif %}>Validée</option>
                                    <option value="expediee" {% if commande.statut == 'expediee' %}selected{% endif %}>Expédiée</option>
                                    <option value="remboursee" {% if commande.statut == 'remboursee' %}selected{% endif %}>Remboursée</option>
                                </select>
                            </form>
                        </p>
                        {% if commande.codePromo %}
                            <p><strong>Code promo utilisé :</strong> {{ commande.codePromo }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Produits commandés</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Produit</th>
                                <th>Prix unitaire</th>
                                <th>Quantité</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ligne in commande.lignesCommande %}
                                <tr>
                                    <td>{{ ligne.produit.nom }}</td>
                                    <td>{{ ligne.prixUnitaire|number_format(2, ',', ' ') }} TND</td>
                                    <td>{{ ligne.quantite }}</td>
                                    <td>{{ ligne.total|number_format(2, ',', ' ') }} TND</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total</strong></td>
                                <td><strong>{{ commande.montant|number_format(2, ',', ' ') }} TND</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Notes internes</h5>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('admin_commande_edit', {'id': commande.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ commande.id) }}">
                    <div class="mb-3">
                        <textarea name="notes" class="form-control" rows="3" placeholder="Ajouter une note interne...">{{ commande.notesInternes }}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Enregistrer la note</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 