{% extends 'base.html.twig' %}

{% block title %}Historique des mouvements - {{ produit.nom }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Historique des mouvements - {{ produit.nom }}</h1>
            <a href="{{ path('admin_stock_index') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">État actuel du stock</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <p class="mb-0"><strong>Stock actuel :</strong> {{ produit.stock }}</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-0"><strong>Seuil d'alerte :</strong> {{ produit.seuilAlerte }}</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-0">
                            <strong>Statut :</strong>
                            {% if produit.estEnAlerte %}
                                <span class="badge bg-warning">En alerte</span>
                            {% else %}
                                <span class="badge bg-success">Normal</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Historique des mouvements</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Quantité</th>
                                <th>Commentaire</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for mouvement in mouvements %}
                                <tr>
                                    <td>{{ mouvement.date|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {% if mouvement.type == 'entrée' or mouvement.type == 'réapprovisionnement' %}
                                            <span class="badge bg-success">{{ mouvement.type }}</span>
                                        {% elseif mouvement.type == 'sortie' %}
                                            <span class="badge bg-danger">{{ mouvement.type }}</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ mouvement.type }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if mouvement.quantite > 0 %}
                                            <span class="text-success">+{{ mouvement.quantite }}</span>
                                        {% else %}
                                            <span class="text-danger">{{ mouvement.quantite }}</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ mouvement.commentaire }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">Aucun mouvement enregistré</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 