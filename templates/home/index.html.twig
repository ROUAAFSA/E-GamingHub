{% extends 'base.html.twig' %}

{% block title %}Accueil - E-GAMING HUB{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Remove default body padding and background for home page */
        body {
            padding-top: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            min-height: 100vh;
        }

        /* Hero Section */
        .hero {
            margin-top: 0;
            padding-top: 150px;
            background: transparent;
            color: white;
            padding-bottom: 80px;
            text-align: center;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            font-weight: 700;
            color: white;
        }

        .hero p {
            font-size: 1.3rem;
            opacity: 0.95;
            max-width: 600px;
            margin: 0 auto 2rem;
            line-height: 1.6;
            color: white;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .hero .btn {
            padding: 1rem 2rem;
            font-size: 1.1rem;
        }

        .btn-hero-primary {
            background: white !important;
            color: #667eea !important;
        }

        .btn-hero-primary:hover {
            background: #f0f0f0 !important;
            color: #667eea !important;
        }

        .btn-hero-secondary {
            background: transparent !important;
            color: white !important;
            border: 2px solid white !important;
        }

        .btn-hero-secondary:hover {
            background: white !important;
            color: #667eea !important;
        }

        /* Features Section */
        .features {
            padding: 80px 20px;
            background: white;
            border-radius: 40px 40px 0 0;
            position: relative;
            z-index: 1;
            margin-top: -20px;
        }

        .features-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .features h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 3rem;
            color: #0e0e10;
            font-weight: 700;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .feature-card {
            background: white;
            padding: 2.5rem 2rem;
            border-radius: 18px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            border: 1px solid #f0f0f0;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
        }

        .feature-icon {
            font-size: 3.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1.5rem;
        }

        .feature-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #0e0e10;
            font-weight: 600;
        }

        .feature-card p {
            color: #52525b;
            line-height: 1.7;
            font-size: 1rem;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            color: white;
            padding: 80px 20px;
            text-align: center;
        }

        .cta-section h2 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
            color: white;
        }

        .cta-section p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.95;
            color: white;
        }

        .cta-section .btn {
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            background: white !important;
            color: #667eea !important;
        }

        .cta-section .btn:hover {
            background: #f0f0f0 !important;
            color: #667eea !important;
        }

        /* Footer */
        .footer {
            background: #1a1a1a;
            color: white;
            padding: 40px 20px 20px;
            text-align: center;
        }

        .footer p {
            margin: 0;
            opacity: 0.8;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero {
                padding-top: 120px;
                padding-bottom: 50px;
            }

            .hero h1 {
                font-size: 2rem;
            }

            .hero p {
                font-size: 1.1rem;
            }

            .features {
                padding: 60px 20px;
            }

            .features h2 {
                font-size: 2rem;
            }

            .cta-section h2 {
                font-size: 2rem;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .feature-card {
                padding: 2rem 1.5rem;
            }
        }

        @media (min-width: 1024px) {
            .hero {
                padding-top: 180px;
            }
        }
    </style>
{% endblock %}

{% block body %}
